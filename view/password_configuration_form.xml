<form string="Password Configuration">
        <label name="factor"/>
        <field name="factor"/>
        <newline/>

        <label name="expiry_days"/>
        <field name="expiry_days"/>
        <newline/>
        <label name="logout_time"/>
        <field name="logout_time"/>

        <separator id="new_pass" string="Password must contain" colspan="4"/>
        <group id="new_pass_group" col="6" colspan="4">
            <label name="letters"/>
            <field name="letters"/>
            <label name="numbers"/>
            <field name="numbers"/>
            <label name="punctuations"/>
            <field name="punctuations"/>
        </group>
</form>
